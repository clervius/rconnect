			.card
				.content
					.row
						.col-sm-6
							.form-group.label-floating.has-primary
								label.control-label Enter Your Current Password
								input.form-control(name="oldPassword", type="password")
								span.material-input
					.row
						.col-sm-6
							.form-group.label-floating.has-primary
								label.control-label New Password
