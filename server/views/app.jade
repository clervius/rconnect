					| &nbsp;&nbsp;&nbsp; HOME 
					span.pull-right 25
					.ripple-container
			li
				a.btn 
					i.material-icons thumb_up
					| &nbsp;&nbsp;&nbsp; ACCEPTED
					span.pull-right 15
					.ripple-container
			li
				a.btn 
					i.material-icons timer
					| &nbsp;&nbsp;&nbsp; PENDING
