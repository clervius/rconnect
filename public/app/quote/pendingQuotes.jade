.clearfix.col-md-12(style="margin-bottom:25px", ng-repeat="pending in pendings")
	.col-md-9
		.card.card-nav-tabs
			.header.header-primary
				.nav-tabs-navigation
					.nav-tabs-wrapper
						ul.nav.nav-tabs
							li 
								a 
									i.material-icons timer
									| Taxpayer in  {{ pending._tpayer.city}} - 
									strong {{ pending.quote | currency }}
							li.pull-right.text-right
								a.btn.btn-primary.btn-sm.btn-raised(href="/connect/pending/{{ pending._id}}") 
									i.material-icons launch
									|View                        	
			.content
				table.table
					thead
						tr
							th Status
							th AGI
							th Fed. Tax
							th St. Tax
							th Student
							th Dep.
					tbody
						tr
							td {{ pending._tpayer.filingStatus}}
							td {{ pending._tpayer.income[0].income + pending._tpayer.income[1].income + pending._tpayer.income[2].income + pending._tpayer.income[3].income | currency}}
							td {{ pending._tpayer.income[0].fdTax + pending._tpayer.income[1].fdTax + pending._tpayer.income[2].fdTax + pending._tpayer.income[3].fdTax | currency }}
							td {{ pending._tpayer.income[0].stTax + pending._tpayer.income[1].stTax + pending._tpayer.income[2].stTax + pending._tpayer.income[3].stTax | currency }}
							td {{ pending._tpayer.student | yesNo}}
							td {{ pending._tpayer.numDdep }}	
	.col-md-3
		ul.list-unstyled(style="padding-top:55px")
			li.text-danger
				small Quote Submitted
			li {{ pending.createTime | date }}
			hr
			li.text-danger
				small 
					i.material-icons(style="font-size:12px") access_time
					| &nbsp;&nbsp;Quote requested
			li {{ pending._tpayer.date | date}}