nav.navbar.navbar-primary.navbar-fixed-top
		.container
			.row
				.col-md-3(ng-app="app")
					a(ng-redirect-to="/choice/", id="logoLink") 
						img(src="/img/logo_white.png", id="headerLogo" style="position:relative;top:10px")
				.col-md-9
					.nav.navbar-nav.nav-tabs.navbar-left(style="")
						h4.title(style="color:white;position:relative;left:12px;top:4px") #{product}
					ul.nav.navbar-nav.navbar-right.nav-tabs
						li.dropdown
							a.btn.dropdown-toggle.btn-simple(id="loginLink", data-toggle="dropdown", ara-expanded="false") #{ user.fname } &nbsp;&nbsp;
								b.caret 
								.ripple-container
							ul.dropdown-menu.dropdown-menu-right(ng-app="app")
								li
									a(ng-redirect-to="/app/account", href="/app/account") 
										i.material-icons person
										| Account
								li.divider
								li.dropdown-header Products
								li
									a(ng-redirect-to="/office/") 
										i.fa.fa-area-chart 
										| &nbsp;&nbsp;&nbsp;My Office
								li
									a(ng-redirect-to="/connect/", href="/connect/") 
										i.fa.fa-newspaper-o
										| &nbsp;&nbsp;&nbsp;A.Connect
								li
									a(ng-redirect-to="/gfs/") 
										i.fa.fa-archive
										| &nbsp;&nbsp;&nbsp;Secure GFS
								li.divider
								li
									a(ng-redirect-to="/logout", href="/logout") 
										i.material-icons exit_to_app
										| Logout