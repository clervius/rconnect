.col-md-3(ng-controller="sideNav")
	ul.list-unstyled(id="mainNav", data-spy="affix", data-offset-top="250")
		li
			a.btn(href="/connect/", ng-class="{'btn-raised btn-primary': $route.current.tab == 'home', 'btn-simple': $route.current.tab != 'home'}")
				i.material-icons supervisor_account
				| &nbsp;&nbsp;&nbsp; TAXPAYERS
				span.pull-right {{ taxpayers.length }}
				.ripple-container
		li
			a.btn(href="/connect/accepted/", ng-class="{'btn-raised btn-primary': $route.current.tab == 'accepteds', 'btn-simple': $route.current.tab != 'accepteds'}")
				i.material-icons thumb_up
				| &nbsp;&nbsp;&nbsp; ACCEPTED
				span.pull-right {{ accepteds.length }}
				.ripple-container
		li
			a.btn(href="/connect/pending/", ng-class="{'btn-raised btn-primary': $route.current.tab == 'pendings', 'btn-simple': $route.current.tab != 'pendings'}") 
				i.material-icons timer
				| &nbsp;&nbsp;&nbsp; PENDING
				span.pull-right {{ pendings.length }}
				.ripple-container